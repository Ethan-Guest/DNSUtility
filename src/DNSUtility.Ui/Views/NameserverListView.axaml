<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DNSUtility.Ui.Views.NameserverListView">

    <DockPanel>
        <Grid DockPanel.Dock="Top" Height="600" Margin="25" ShowGridLines="True">
            <DataGrid Name="MyDataGrid" Items="{Binding Nameservers}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn MaxWidth="150" Header="Name" Binding="{Binding Name}" />
                    <DataGridTextColumn MaxWidth="150" Header="Country" Binding="{Binding Country}" />
                    <DataGridTextColumn MaxWidth="150" Header="IPAddress" Binding="{Binding IpAddress}" />
                    <DataGridTextColumn MaxWidth="150" Header="Ping" Binding="{Binding TotalPing}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>


        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Command="{Binding RunDnsTest}" Margin="10,0">Run DNS Test</Button>
            <Button Margin="10,0">Apply DNS</Button>
            <Button Margin="10,0">Settings</Button>
        </StackPanel>
    </DockPanel>
</UserControl>
